<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
  <% @categories.each do |category| %>
    <div class="card bg-base-100 shadow-md hover:shadow-xl transition-shadow">
      <figure class="bg-neutral/5">
        <% if category.image.attached? %>
          <%= image_tag category.image, alt: category.name, class: "w-full h-64 object-cover" %>
        <% else %>
          <div class="w-full h-64 bg-gradient-to-br from-primary/20 to-secondary/20 flex items-center justify-center">
            <span class="text-6xl font-bold text-primary/30"><%= category.name[0] %></span>
          </div>
        <% end %>
      </figure>
      <div class="card-body">
        <div class="flex flex-col items-center justify-center">
          <h2 class="card-title text-2xl mb-2 text-center"><%= category.name %></h2>
          <% if category.description.present? %>
            <p class="text-neutral/70 mb-4 text-center"><%= category.description %></p>
          <% end %>
        </div>
        <%= link_to "Shop #{category.name}", category_path(category), class: "btn btn-primary w-full rounded-full text-lg" %>
      </div>
    </div>
  <% end %>
</div>