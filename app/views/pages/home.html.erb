<!-- Features Section - Alternating Layout -->
<div class="container mx-auto px-4 mb-32">
  <!-- Feature 1 -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-24">
    <div class="order-2 lg:order-1">
      <%= vite_image_tag "images/pizza-boxes.png", alt: "Pizza Boxes", class: "w-full rounded-lg shadow-lg" %>
    </div>
    <div class="order-1 lg:order-2 space-y-6">
      <h2 class="text-4xl md:text-5xl font-bold leading-tight">Packaging That Tells Your Story</h2>
      <p class="text-lg text-neutral/80">
        From pizza boxes to ice cream cups, every product is an opportunity to showcase your brand.
        Our eco-friendly supplies help you deliver quality while making a lasting impression.
      </p>
      <% mains_category = @categories.find { |c| c.slug == "mains" } %>
      <% if mains_category %>
        <%= link_to "Shop #{mains_category.name}", category_path(mains_category), class: "btn btn-primary btn-lg" %>
      <% else %>
        <%= link_to "Explore Products", shop_path, class: "btn btn-primary btn-lg" %>
      <% end %>
    </div>
  </div>

  <!-- Feature 2 -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-24">
    <div class="space-y-6">
      <h2 class="text-4xl md:text-5xl font-bold leading-tight">Sustainable Doesn't Mean Compromise</h2>
      <p class="text-lg text-neutral/80">
        Experience premium quality with our carefully curated selection of eco-friendly catering supplies.
        Built to perform, designed to impress, made to protect our planet.
      </p>
      <% desserts_category = @categories.find { |c| c.slug == "desserts" } %>
      <% if desserts_category %>
        <%= link_to "Shop #{desserts_category.name}", category_path(desserts_category), class: "btn btn-primary btn-lg" %>
      <% else %>
        <%= link_to "View Collection", shop_path, class: "btn btn-primary btn-lg" %>
      <% end %>
    </div>
    <div>
      <%= vite_image_tag "images/ice-cream-cups.png", alt: "Ice Cream Cups", class: "w-full rounded-lg shadow-lg" %>
    </div>
  </div>

  <!-- Feature 3 -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
    <div class="order-2 lg:order-1">
      <%= vite_image_tag "images/napkins.png", alt: "Napkins", class: "w-full rounded-lg shadow-lg" %>
    </div>
    <div class="order-1 lg:order-2 space-y-6">
      <h2 class="text-4xl md:text-5xl font-bold leading-tight">Details That Delight</h2>
      <p class="text-lg text-neutral/80">
        Every touchpoint matters. From the first napkin to the final takeaway box,
        create memorable moments with supplies that reflect your commitment to quality and sustainability.
      </p>
      <%= link_to "Browse All Products", shop_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>
</div>

<!-- Trust Banner -->
<div class="w-screen relative left-[50%] right-[50%] -mx-[50vw] bg-neutral/5 py-20 mb-32">
  <div class="container mx-auto text-center px-8">
    <h2 class="text-3xl md:text-4xl font-bold mb-6">Eco-Friendly Products, Expertly Crafted</h2>
    <p class="text-xl text-neutral/70 max-w-3xl mx-auto mb-12">
      By choosing sustainable materials and innovative design, we create catering supplies
      that deliver unrivaled quality while being kind to our planet.
    </p>
    <div class="flex justify-center">
      <%= render "shared/logo" %>
    </div>
  </div>
</div>

<!-- Categories Section -->
<div class="container mx-auto px-4 mb-32">
  <%= render "categories/index" %>
</div>

<!-- Featured Products -->
<div class="container mx-auto px-4 mb-32">
  <div class="text-center mb-12">
    <h2 class="text-4xl md:text-5xl font-bold mb-4">Our Bestsellers</h2>
    <p class="text-xl text-neutral/70">Discover what businesses love most</p>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
    <% @featured_products.each do |product| %>
      <div class="group card bg-base-100 shadow-md hover:shadow-xl transition-shadow duration-300">
        <figure class="relative overflow-hidden bg-neutral/5">
          <% if product.product_photo.attached? %>
            <%= image_tag product.product_photo.variant(resize_to_limit: [400, 400]),
                alt: product.name,
                class: "w-full h-[300px] object-cover group-hover:scale-105 transition-transform duration-300" %>
          <% else %>
            <div class="w-full h-[300px] bg-gray-200 flex items-center justify-center">
              <span class="text-gray-500">Image not available</span>
            </div>
          <% end %>
        </figure>
        <div class="card-body p-6">
          <h3 class="card-title text-lg font-semibold mb-2">
            <%= link_to product.name, product_path(product), class: "hover:text-primary transition-colors" %>
          </h3>
          <p><%= number_to_currency product.active_variants.first&.price %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Testimonial Section -->
<div class="w-screen relative left-[50%] right-[50%] -mx-[50vw] bg-neutral/5 py-20">
  <div class="container mx-auto text-center px-8">
    <div class="max-w-4xl mx-auto">
      <div class="rating rating-lg mb-6">
        <input type="radio" name="rating-2" class="mask mask-star-2 bg-primary" />
        <input type="radio" name="rating-2" class="mask mask-star-2 bg-primary" />
        <input type="radio" name="rating-2" class="mask mask-star-2 bg-primary" />
        <input type="radio" name="rating-2" class="mask mask-star-2 bg-primary" />
        <input type="radio" name="rating-2" class="mask mask-star-2 bg-primary" checked/>
      </div>
      <blockquote class="text-2xl md:text-3xl font-medium mb-6 italic leading-relaxed">
        "Excellent quality and fast shipping! Our customers love the eco-friendly packaging,
        and it's helped strengthen our brand identity."
      </blockquote>
      <p class="text-xl font-semibold">Sarah M.</p>
      <p class="text-neutral/60">Restaurant Owner</p>
    </div>
  </div>
</div>
