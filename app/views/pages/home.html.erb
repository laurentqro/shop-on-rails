<div class="hero rounded shadow-md min-h-96 bg-cover bg-center mb-16" style="background-image: url(<%= image_path("hero.png") %>);">
  <div class="hero-content">
    <div>
      <h1 class="mb-5 text-5xl text-neutral font-bold w-2/3">Eco-Friendly Catering Supplies</h1>
      <p class="mb-5 w-1/2">Sustainable products for cafes, restaurants, and events</p>
      <%= link_to "Shop Now", shop_path, class: "btn btn-lg btn-primary" %>
    </div>
  </div>
</div>

