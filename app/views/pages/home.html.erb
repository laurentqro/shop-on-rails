  <div class="card bg-base-100 shadow-md">
    <figure>
      <%= image_tag "pizza-boxes.png", alt: "Best Sellers" %>
    </figure>
    <div class="card-body">
      <h2 class="card-title">Best Sellers</h2>
    </div>
  </div>

  <div class="card bg-base-100 shadow-md">
    <figure>
      <%= image_tag "ice-cream-cups.png", alt: "New Arrivals" %>
    </figure>
    <div class="card-body">
      <h2 class="card-title">New Arrivals</h2>
    </div>
  </div>

  <div class="card bg-base-100 shadow-md">
    <figure>
      <%= image_tag "cups-lids.png", alt: "Cups & Lids" %>
    </figure>
    <div class="card-body">
      <h2 class="card-title">Cups & Lids</h2>
    </div>
  </div>

  <div class="card bg-base-100 shadow-md">
    <figure>
      <%= image_tag "straws.png", alt: "Straws" %>
    </figure>
    <div class="card-body">
      <h2 class="card-title">Straws</h2>
    </div>
  </div>

  <div class="card bg-base-100 shadow-md">
    <figure>
      <%= image_tag "napkins.png", alt: "Napkins" %>
    </figure>
    <div class="card-body">
      <h2 class="card-title">Napkins</h2>
    </div>
  </div>

  <div class="card bg-base-100 shadow-md">
    <figure>
      <%= image_tag "hot-cups.png", alt: "Hot Cups" %>
    </figure>
    <div class="card-body">
      <h2 class="card-title">Hot Cups</h2>
    </div>
  </div>

  <div class="card bg-base-100 shadow-md">
    <figure>
      <%= image_tag "ice-cream-cups.png", alt: "Ice Cream Cups" %>
    </figure>
    <div class="card-body">
      <h2 class="card-title">Ice Cream Cups</h2>
    </div>
  </div>

  <div class="card bg-base-100 shadow-md">
    <figure>
      <%= image_tag "pizza-boxes.png", alt: "Pizza Boxes" %>
    </figure>
    <div class="card-body">
      <h2 class="card-title">Pizza Boxes</h2>
    </div>
  </div>

