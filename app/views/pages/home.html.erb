<!-- Categories Section -->
<div class="container mx-auto px-4 mb-32">
  <%= render "categories/index" %>
</div>

<!-- Featured Products -->
<div class="container mx-auto px-4 mb-32">
  <div class="text-center mb-12">
    <h2 class="text-4xl md:text-5xl font-bold mb-4">Our Bestsellers</h2>
    <p class="text-xl text-neutral/70">Discover what businesses love most</p>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
    <% @featured_products.each do |product| %>
      <div class="group card bg-base-100 shadow-md hover:shadow-xl transition-shadow duration-300">
        <figure class="relative overflow-hidden bg-neutral/5">
          <% if product.image.attached? %>
            <%= image_tag product.image.variant(resize_to_limit: [400, 400]),
                alt: product.name,
                class: "w-full h-[300px] object-cover group-hover:scale-105 transition-transform duration-300" %>
          <% else %>
            <div class="w-full h-[300px] bg-gray-200 flex items-center justify-center">
              <span class="text-gray-500">Image not available</span>
            </div>
          <% end %>
        </figure>
        <div class="card-body p-6">
          <h3 class="card-title text-lg font-semibold mb-2">
            <%= link_to product.name, product_path(product), class: "hover:text-primary transition-colors" %>
          </h3>
          <p><%= number_to_currency product.active_variants.first&.price %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

