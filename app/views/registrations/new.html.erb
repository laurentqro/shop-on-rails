<div class="flex justify-center items-center">
  <%= form_with model: @user, url: registration_path, html: { class: "fieldset bg-base-100 border-base-300 rounded-box w-full max-w-sm border p-6 shadow-xl" } do |form| %>
    <legend class="text-2xl font-bold text-center mb-6">Sign Up</legend>

    <% if @user.errors.any? %>
      <div class="alert alert-error mb-4">
        <ul class="list-disc list-inside">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-control">
      <%= form.label :email_address, class: "label" do %>
        <span class="label-text">Email</span>
      <% end %>
      <%= form.email_field :email_address, required: true, autofocus: true, class: "input input-bordered w-full", placeholder: "Enter your email" %>
    </div>

    <div class="form-control mt-4">
      <%= form.label :password, class: "label" do %>
        <span class="label-text">Password</span>
      <% end %>
      <%= form.password_field :password, required: true, class: "input input-bordered w-full", placeholder: "Enter your password" %>
    </div>

    <div class="form-control mt-4">
      <%= form.label :password_confirmation, class: "label" do %>
        <span class="label-text">Confirm Password</span>
      <% end %>
      <%= form.password_field :password_confirmation, required: true, class: "input input-bordered w-full", placeholder: "Confirm your password" %>
    </div>

    <div class="form-control mt-6">
      <%= form.submit "Sign Up", class: "btn btn-primary w-full" %>
    </div>

    <div class="text-center mt-4">
      <%= link_to "Already have an account? Log In", new_session_path, class: "link link-hover link-primary" %>
    </div>
  <% end %>
</div>