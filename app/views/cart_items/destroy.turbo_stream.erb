<%= turbo_stream.update "cart" do %>
  <%= render partial: "cart_items/index" %>
<% end %>

<%= turbo_stream.replace "basket_counter" do %>
  <%= render partial: "shared/basket_counter", locals: { cart_items_count: Current.cart.items_count } %>
<% end %>

<%= turbo_stream.update "subtotal" do %>
  <%= number_to_currency(Current.cart.subtotal) %>
<% end %>

<%= turbo_stream.update "grand_total" do %>
  <%= number_to_currency(Current.cart.total_amount) %>
<% end %>