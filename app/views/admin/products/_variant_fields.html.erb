<div class="collapse collapse-arrow border border-neutral rounded-md my-8 <%= 'collapse-open' if form.object.new_record? %>">
  <input type="checkbox" <%= 'checked' if form.object.new_record? %> />
  <div class="collapse-title text-xl font-medium flex items-center justify-between pr-12">
    <span>
      <%= form.object.new_record? ? "New Variant" : form.object.name %>
      <% if form.object.persisted? %>
        <span class="badge badge-sm <%= form.object.active? ? 'badge-success' : 'badge-ghost' %> ml-2">
          <%= form.object.active? ? 'Active' : 'Inactive' %>
        </span>
      <% end %>
    </span>
    <% unless form.object.new_record? %>
      <div class="flex items-center gap-2" onclick="event.stopPropagation();">
        <%= form.label :_destroy, "Mark for Deletion", class: "label cursor-pointer text-sm", onclick: "event.stopPropagation();" %>
        <%= form.check_box :_destroy, class: "checkbox checkbox-error checkbox-sm", onclick: "event.stopPropagation();" %>
      </div>
    <% end %>
  </div>
  <div class="collapse-content">
    <div class="grid grid-cols-1 gap-x-6 gap-y-4 pt-4">

    <fieldset class="fieldset">
      <legend class="fieldset-legend text-xl font-medium">Status</legend>
      <div class="grid grid-cols-2 gap-y-4 py-4">
        <%= form.label :active, class: "label cursor-pointer text-base" %>
        <%= form.check_box :active, class: "toggle toggle-primary" %>
      </div>

      <div class="divider my-4"></div>

      <legend class="fieldset-legend text-xl font-medium">Details</legend>
      <div class="grid grid-cols-2 gap-y-4 py-4">
        <%= form.label :name, "Name (required)", class: "label text-base" %>
        <%= form.text_field :name, required: true, class: "input input-bordered" %>

        <%= form.label :sku, "SKU (required)", class: "label text-base" %>
        <%= form.text_field :sku, required: true, class: "input input-bordered" %>

        <%= form.label :price, "Price (required)", class: "label text-base" %>
        <%= form.number_field :price, required: true, class: "input input-bordered", step: 0.01 %>
      </div>

      <div class="divider my-4"></div>

      <legend class="fieldset-legend text-xl font-medium">Variant Photos</legend>
      <div class="grid grid-cols-2 gap-y-4 py-4">
        <%# Product Photo %>
        <%= form.label :product_photo, "Product Photo", class: "label text-base" %>
        <%= turbo_frame_tag "variant_product_photo_#{form.object.id}" do %>
          <div>
            <%= form.file_field :product_photo, accept: 'image/*', class: "file-input file-input-bordered w-full" %>
            <% if form.object.product_photo.attached? %>
              <div class="mt-2 relative inline-block">
                <%= image_tag form.object.product_photo.variant(resize_to_limit: [150, 150]), class: "rounded shadow" %>
                <% unless form.object.new_record? %>
                  <%= link_to product_photo_admin_product_variant_path(form.object),
                        class: "absolute top-1 right-1 p-1 hover:bg-base-200 rounded cursor-pointer",
                        data: {
                          turbo_method: :delete,
                          turbo_frame: "variant_product_photo_#{form.object.id}",
                          turbo_confirm: "Delete this photo?"
                        } do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-base-content hover:text-error transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                  <% end %>
                <% end %>
                <p class="text-xs text-success mt-1">✓ Variant photo uploaded</p>
              </div>
            <% else %>
              <div class="mt-2">
                <div class="w-[150px] h-[150px] bg-base-200 rounded flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-base-content/30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
                <p class="text-xs text-warning mt-1">⚠️ No variant photo (will show placeholder)</p>
              </div>
            <% end %>
          </div>
        <% end %>

        <%# Lifestyle Photo %>
        <%= form.label :lifestyle_photo, "Lifestyle Photo", class: "label text-base" %>
        <%= turbo_frame_tag "variant_lifestyle_photo_#{form.object.id}" do %>
          <div>
            <%= form.file_field :lifestyle_photo, accept: 'image/*', class: "file-input file-input-bordered w-full" %>
            <% if form.object.lifestyle_photo.attached? %>
              <div class="mt-2 relative inline-block">
                <%= image_tag form.object.lifestyle_photo.variant(resize_to_limit: [150, 150]), class: "rounded shadow" %>
                <% unless form.object.new_record? %>
                  <%= link_to lifestyle_photo_admin_product_variant_path(form.object),
                        class: "absolute top-1 right-1 p-1 hover:bg-base-200 rounded cursor-pointer",
                        data: {
                          turbo_method: :delete,
                          turbo_frame: "variant_lifestyle_photo_#{form.object.id}",
                          turbo_confirm: "Delete this photo?"
                        } do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-base-content hover:text-error transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                  <% end %>
                <% end %>
                <p class="text-xs text-success mt-1">✓ Variant lifestyle photo uploaded</p>
              </div>
            <% else %>
              <div class="mt-2">
                <div class="w-[150px] h-[150px] bg-base-200 rounded flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-base-content/30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
                <p class="text-xs text-warning mt-1">⚠️ No lifestyle photo (will show placeholder)</p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="divider my-4"></div>

      <legend class="fieldset-legend text-xl font-medium">Dimensions</legend>
      <div class="grid grid-cols-2 gap-y-4 py-4">
        <%= form.label :diameter_in_mm, "Diameter (mm)", class: "label text-base" %>
        <%= form.number_field :diameter_in_mm, class: "input input-bordered" %>

        <%= form.label :height_in_mm, "Height (mm)", class: "label text-base" %>
        <%= form.number_field :height_in_mm, class: "input input-bordered" %>

        <%= form.label :width_in_mm, "Width (mm)", class: "label text-base" %>
        <%= form.number_field :width_in_mm, class: "input input-bordered" %>

        <%= form.label :depth_in_mm, "Depth (mm)", class: "label text-base" %>
        <%= form.number_field :depth_in_mm, class: "input input-bordered" %>

        <%= form.label :weight_in_g, "Weight (g)", class: "label text-base" %>
        <%= form.number_field :weight_in_g, class: "input input-bordered" %>

        <%= form.label :volume_in_ml, "Volume (ml)", class: "label text-base" %>
        <%= form.number_field :volume_in_ml, class: "input input-bordered" %>
      </div>
    </fieldset>
    </div>
  </div>
</div>