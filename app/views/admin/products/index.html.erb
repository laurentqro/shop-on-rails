<h1 class="text-2xl font-bold">Products</h1>

<%= link_to "New Product", new_admin_product_path, class: "btn btn-primary" %>

<div class="overflow-x-auto mt-5">
  <table class="table table-zebra w-full">
    <thead>
      <tr>
        <th>SKU</th>
        <th>Name</th>
        <th>Colour</th>
        <th>Price</th>
        <th>Featured</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.sku %></td>
          <td>
            <%= link_to product.name, product_path(product), class: "link" %>
          </td>
          <td><%= product.colour %></td>
          <td><%= product.price %></td>
          <td class="text-center"><%= product.featured ? "✅" : "❌" %></td>
          <td class="flex gap-2">
            <%= link_to "Edit", edit_admin_product_path(product), class: "btn btn-sm btn-primary" %>
            <%= button_to "Delete", admin_product_path(product), method: :delete, class: "btn btn-sm btn-error", form: { data: { turbo_confirm: "Are you sure?" } } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>