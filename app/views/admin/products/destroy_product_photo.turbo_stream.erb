<%= turbo_stream.replace "product_photo_#{@product.id}" do %>
  <%= turbo_frame_tag "product_photo_#{@product.id}" do %>
    <div>
      <%= form_with(model: [:admin, @product], class: "contents") do |form| %>
        <%= form.file_field :product_photo, accept: 'image/*', class: "file-input file-input-bordered" %>
      <% end %>
      <div class="mt-4">
        <div class="w-[200px] h-[200px] bg-base-200 rounded flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-base-content/30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <p class="text-sm text-gray-600 mt-1">No product photo</p>
      </div>
    </div>
  <% end %>
<% end %>
