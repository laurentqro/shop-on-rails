<%= form_with(model: [:admin, category], local: true, class: "space-y-6") do |form| %>
  <% if category.errors.any? %>
    <div class="alert alert-error">
      <h2 class="font-bold"><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>
      <ul class="list-disc list-inside">
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-control">
    <%= form.label :name, class: "label" %>
    <%= form.text_field :name, class: "input input-bordered w-full", placeholder: "e.g. Drinks" %>
  </div>

  <div class="form-control">
    <%= form.label :slug, class: "label" %>
    <%= form.text_field :slug, class: "input input-bordered w-full", placeholder: "e.g. drinks" %>
    <label class="label">
      <span class="label-text-alt">URL-friendly identifier (lowercase, use hyphens)</span>
    </label>
  </div>

  <div class="form-control">
    <%= form.label :description, class: "label" %>
    <%= form.text_area :description, class: "textarea textarea-bordered w-full", rows: 3, placeholder: "Brief description of the category" %>
  </div>

  <div class="form-control">
    <%= form.label :meta_title, "SEO Meta Title", class: "label" %>
    <%= form.text_field :meta_title, class: "input input-bordered w-full", placeholder: "e.g. Drinks Packaging - Cups & Straws | Afida" %>
    <label class="label">
      <span class="label-text-alt">Shown in search engine results (50-60 characters)</span>
    </label>
  </div>

  <div class="form-control">
    <%= form.label :meta_description, "SEO Meta Description", class: "label" %>
    <%= form.text_area :meta_description, class: "textarea textarea-bordered w-full", rows: 2, placeholder: "Brief description for search engines" %>
    <label class="label">
      <span class="label-text-alt">Shown in search engine results (150-160 characters)</span>
    </label>
  </div>

  <div class="form-control">
    <%= form.label :image, "Category Image", class: "label" %>

    <% if category.image.attached? %>
      <div class="mb-4">
        <%= image_tag category.image, class: "w-64 h-64 object-cover rounded-lg shadow-md" %>
        <p class="text-sm text-gray-600 mt-2">Current image</p>
      </div>
    <% end %>

    <%= form.file_field :image, class: "file-input file-input-bordered w-full", accept: "image/*" %>
    <label class="label">
      <span class="label-text-alt">Upload a new image (JPG, PNG, WebP recommended)</span>
    </label>
  </div>

  <div class="flex gap-4">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", admin_categories_path, class: "btn btn-ghost" %>
  </div>
<% end %>
